{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "modules/*": ["./src/modules/*"],
      "lib/*": ["./src/lib/*"],
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
